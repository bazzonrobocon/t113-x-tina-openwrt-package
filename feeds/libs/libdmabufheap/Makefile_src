LOCAL_CFLAGS += -I./include -I. -std=c++17 -Wno-attributes
LOCAL_LDFLAGS =

SRCS += ${wildcard *.cpp}
OBJS = $(patsubst %.cpp, %.cpp.o, $(SRCS))
TARGET = libdmabufheap.so

all:$(TARGET) install

$(TARGET):$(OBJS)
	$(CXX) $(CFLAGS) $(LDFLAGS) $(LOCAL_CFLAGS) $(LOCAL_LDFLAGS) -o $@ $^ -fPIC -shared

$(OBJS):%.cpp.o:%.cpp
	$(CXX) $(CFLAGS) $(LDFLAGS) $(LOCAL_CFLAGS) $(LOCAL_LDFLAGS) -fpermissive -c $^ -o $@ -fPIC -shared

clean:
	-rm -rf $(OBJS) $(TARGET)

install:
	-mkdir -p $(CONFIG_PREFIX)/usr/lib
	-mkdir -p $(CONFIG_PREFIX)/usr/include/BufferAllocator/
	-cp $(TARGET) $(CONFIG_PREFIX)/usr/lib/
	-cp include/BufferAllocator/*.h $(CONFIG_PREFIX)/usr/include/BufferAllocator/

.PHONY:all clean $(TARGET) install