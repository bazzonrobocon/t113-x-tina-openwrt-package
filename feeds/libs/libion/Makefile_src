LOCAL_CFLAGS += -I./include -I./kernel-headers -I.
LOCAL_LDFLAGS =

#SRCS += ${wildcard *.c}
SRCS += ion.c
OBJS = $(patsubst %.c, %.c.o, $(SRCS))
TARGET = libion.so

all:$(TARGET) install

$(TARGET):$(OBJS)
	$(CXX) $(CFLAGS) $(LDFLAGS) $(LOCAL_CFLAGS) $(LOCAL_LDFLAGS) -o $@ $^ -fPIC -shared

$(OBJS):%.c.o:%.c
	$(CXX) $(CFLAGS) $(LDFLAGS) $(LOCAL_CFLAGS) $(LOCAL_LDFLAGS) -fpermissive -c $^ -o $@ -fPIC -shared

clean:
	-rm -rf $(OBJS) $(TARGET)

install:
	-mkdir -p $(CONFIG_PREFIX)/usr/lib
	-mkdir -p $(CONFIG_PREFIX)/usr/include/libion/ion/
	-mkdir -p $(CONFIG_PREFIX)/usr/include/libion/linux/
	-cp $(TARGET) $(CONFIG_PREFIX)/usr/lib/
	-cp include/ion/*.h $(CONFIG_PREFIX)/usr/include/libion/ion/
	-cp kernel-headers/linux/*.h $(CONFIG_PREFIX)/usr/include/libion/linux/

.PHONY:all clean $(TARGET) install
